<%= form_with model: sale, local: true do |f| %>
  <div class="form-group">
    <%= f.label :cod, "Código:"%>
    <%= f.number_field :cod, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :detail, "Detalle:"%>
    <%= f.text_area :detail, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category, "Categoría:"%>
    <%= f.text_field :category, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :value, "Valor:"%>
    <%= f.number_field :value, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :discount, "Descuento aplicado:"%>
    <%= f.number_field :discount, class: "form-control" %>
  </div>
  <div class="form-group form-check">
    <%= f.check_box :tax, class: "form-check-input" %>
    <%= f.label :tax, "Exento de IVA", class: "form-check-label"%>
  </div>
    <%= f.submit "Enviar", class: "btn btn-secondary" %>
<% end %>